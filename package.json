{
  "name": "runway-script-runner",
  "displayName": "Runway",
  "description": "Run npm, shell, Python, Swift, Go and more from a smart sidebar. Add any package.json or script directory and launch with one click.",
  "version": "1.0.0",
  "publisher": "YOUR_PUBLISHER_ID",
  "icon": "images/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/vscode-script-runner"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/vscode-script-runner/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/vscode-script-runner#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "scripts",
    "npm",
    "runner",
    "task runner",
    "shell",
    "python",
    "swift",
    "sidebar",
    "terminal",
    "pnpm",
    "bun",
    "yarn",
    "makefile"
  ],
  "galleryBanner": {
    "color": "#1A1C22",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "runway",
          "title": "Runway",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "runway": [
        {
          "id": "scriptRunnerView",
          "name": "Scripts"
        }
      ]
    },
    "commands": [
      {
        "command": "scriptRunner.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "scriptRunner.add",
        "title": "Add...",
        "icon": "$(add)"
      },
      {
        "command": "scriptRunner.run",
        "title": "Run Script",
        "icon": "$(play)"
      },
      {
        "command": "scriptRunner.setOverride",
        "title": "Set Command Override..."
      },
      {
        "command": "scriptRunner.clearOverride",
        "title": "Clear Override"
      },
      {
        "command": "scriptRunner.setLabel",
        "title": "Set Display Name..."
      },
      {
        "command": "scriptRunner.clearLabel",
        "title": "Clear Display Name"
      },
      {
        "command": "scriptRunner.removeSource",
        "title": "Remove"
      },
      {
        "command": "scriptRunner.manageSources",
        "title": "Remove Sources..."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "scriptRunner.refresh",
          "when": "view == scriptRunnerView",
          "group": "navigation@2"
        },
        {
          "command": "scriptRunner.add",
          "when": "view == scriptRunnerView",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "scriptRunner.run",
          "when": "view == scriptRunnerView && viewItem =~ /^runnable/",
          "group": "inline"
        },
        {
          "command": "scriptRunner.run",
          "when": "view == scriptRunnerView && viewItem =~ /^runnable/",
          "group": "1_run@1"
        },
        {
          "command": "scriptRunner.setOverride",
          "when": "view == scriptRunnerView && viewItem =~ /^runnable/",
          "group": "2_override@1"
        },
        {
          "command": "scriptRunner.clearOverride",
          "when": "view == scriptRunnerView && viewItem == runnable-overridden",
          "group": "2_override@2"
        },
        {
          "command": "scriptRunner.setLabel",
          "when": "view == scriptRunnerView && viewItem =~ /^runnable/",
          "group": "3_label@1"
        },
        {
          "command": "scriptRunner.clearLabel",
          "when": "view == scriptRunnerView && viewItem =~ /^runnable/",
          "group": "3_label@2"
        },
        {
          "command": "scriptRunner.removeSource",
          "when": "view == scriptRunnerView && (viewItem == packageGroup || viewItem == makeGroup || viewItem == fileCategory)",
          "group": "9_remove"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.3.0"
  }
}
