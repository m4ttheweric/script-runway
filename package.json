{
  "name": "runway",
  "displayName": "Script Runway",
  "description": "Run npm, shell, Python, Swift, Go and more from a smart sidebar. Add any package.json or script directory and launch with one click.",
  "version": "1.1.4",
  "publisher": "m4ttheweric",
  "icon": "images/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/m4ttheweric/runway"
  },
  "bugs": {
    "url": "https://github.com/m4ttheweric/runway/issues"
  },
  "homepage": "https://github.com/m4ttheweric/runway#readme",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Other"],
  "keywords": [
    "scripts",
    "npm",
    "runner",
    "task runner",
    "shell",
    "python",
    "swift",
    "sidebar",
    "terminal",
    "pnpm",
    "bun",
    "yarn",
    "makefile"
  ],
  "galleryBanner": {
    "color": "#1A1C22",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "runway",
          "title": "Script Runway",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "runway": [
        {
          "id": "runwayView",
          "name": "Script Runway"
        }
      ]
    },
    "commands": [
      { "command": "runway.refresh",      "title": "Refresh",               "icon": "$(refresh)" },
      { "command": "runway.add",           "title": "Add...",                "icon": "$(add)" },
      { "command": "runway.run",           "title": "Run Script",            "icon": "$(play)" },
      { "command": "runway.setOverride",   "title": "Set Command Override..." },
      { "command": "runway.clearOverride", "title": "Clear Override" },
      { "command": "runway.setLabel",      "title": "Set Display Name..." },
      { "command": "runway.clearLabel",    "title": "Clear Display Name" },
      { "command": "runway.removeSource",  "title": "Remove" },
      { "command": "runway.manageSources", "title": "Remove Sources..." }
    ],
    "menus": {
      "view/title": [
        {
          "command": "runway.refresh",
          "when": "view == runwayView",
          "group": "navigation@2"
        },
        {
          "command": "runway.add",
          "when": "view == runwayView",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "runway.run",
          "when": "view == runwayView && viewItem =~ /^runnable/",
          "group": "inline"
        },
        {
          "command": "runway.run",
          "when": "view == runwayView && viewItem =~ /^runnable/",
          "group": "1_run@1"
        },
        {
          "command": "runway.setOverride",
          "when": "view == runwayView && viewItem =~ /^runnable/",
          "group": "2_override@1"
        },
        {
          "command": "runway.clearOverride",
          "when": "view == runwayView && viewItem == runnable-overridden",
          "group": "2_override@2"
        },
        {
          "command": "runway.setLabel",
          "when": "view == runwayView && viewItem =~ /^runnable/",
          "group": "3_label@1"
        },
        {
          "command": "runway.clearLabel",
          "when": "view == runwayView && viewItem =~ /^runnable/",
          "group": "3_label@2"
        },
        {
          "command": "runway.removeSource",
          "when": "view == runwayView && (viewItem == packageGroup || viewItem == makeGroup || viewItem == fileCategory)",
          "group": "9_remove"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.9.3"
  }
}
