{
  "name": "runway",
  "displayName": "Script Runway",
  "description": "Run npm, shell, Python, Swift, Go and more from a smart sidebar. Add any package.json or script directory and launch with one click.",
  "version": "1.3.1",
  "publisher": "m4ttheweric",
  "icon": "images/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/m4ttheweric/runway"
  },
  "bugs": {
    "url": "https://github.com/m4ttheweric/runway/issues"
  },
  "homepage": "https://github.com/m4ttheweric/runway#readme",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "scripts",
    "npm",
    "runner",
    "task runner",
    "shell",
    "python",
    "swift",
    "sidebar",
    "terminal",
    "pnpm",
    "bun",
    "yarn",
    "makefile"
  ],
  "galleryBanner": {
    "color": "#1A1C22",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "runway",
          "title": "Script Runway",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "runway": [
        {
          "id": "runwayView",
          "name": "Script Runway"
        }
      ]
    },
    "commands": [
      {
        "command": "runway.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "runway.add",
        "title": "Add...",
        "icon": "$(add)"
      },
      {
        "command": "runway.run",
        "title": "Run Script",
        "icon": "$(play)"
      },
      {
        "command": "runway.setOverride",
        "title": "Set Command Override..."
      },
      {
        "command": "runway.clearOverride",
        "title": "Clear Override"
      },
      {
        "command": "runway.setLabel",
        "title": "Set Display Name..."
      },
      {
        "command": "runway.clearLabel",
        "title": "Clear Display Name"
      },
      {
        "command": "runway.removeSource",
        "title": "Remove"
      },
      {
        "command": "runway.manageSources",
        "title": "Remove Sources..."
      },
      { "command": "runway.openInSystemTerminal.Terminal", "title": "Open in Terminal" },
      { "command": "runway.openInSystemTerminal.Warp",     "title": "Open in Warp" },
      { "command": "runway.openInSystemTerminal.iTerm",    "title": "Open in iTerm" },
      { "command": "runway.openInSystemTerminal.iTerm2",   "title": "Open in iTerm2" },
      {
        "command": "runway.openSourceFile",
        "title": "Open Source File"
      },
      {
        "command": "runway.stop",
        "title": "Stop",
        "icon": "$(debug-stop)"
      }
    ],
    "configuration": {
      "title": "Script Runway",
      "properties": {
        "runway.systemTerminalApp": {
          "type": "string",
          "default": "Terminal",
          "enum": ["Terminal", "Warp", "iTerm", "iTerm2"],
          "enumDescriptions": [
            "macOS Terminal.app (default)",
            "Warp â€” uses the warp:// URL scheme",
            "iTerm (legacy name)",
            "iTerm2"
          ],
          "description": "The terminal app to use for Open in System Terminal (macOS)."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "runway.refresh",
          "when": "view == runwayView",
          "group": "navigation@2"
        },
        {
          "command": "runway.add",
          "when": "view == runwayView",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "runway.run",
          "when": "view == runwayView && viewItem =~ /^runnable-idle/",
          "group": "inline"
        },
        {
          "command": "runway.stop",
          "when": "view == runwayView && viewItem =~ /^runnable-active/",
          "group": "inline"
        },
        {
          "command": "runway.run",
          "when": "view == runwayView && viewItem =~ /^runnable-idle/",
          "group": "1_run@1"
        },
        {
          "command": "runway.stop",
          "when": "view == runwayView && viewItem =~ /^runnable-active/",
          "group": "1_run@1"
        },
        {
          "command": "runway.setOverride",
          "when": "view == runwayView && viewItem =~ /^runnable-/",
          "group": "2_override@1"
        },
        {
          "command": "runway.clearOverride",
          "when": "view == runwayView && viewItem =~ /overridden/",
          "group": "2_override@2"
        },
        {
          "command": "runway.setLabel",
          "when": "view == runwayView && viewItem =~ /^runnable-/",
          "group": "3_label@1"
        },
        {
          "command": "runway.clearLabel",
          "when": "view == runwayView && viewItem =~ /^runnable-/",
          "group": "3_label@2"
        },
        {
          "command": "runway.openInSystemTerminal.Terminal",
          "when": "view == runwayView && viewItem =~ /^runnable-/ && config.runway.systemTerminalApp == 'Terminal'",
          "group": "1_run@2"
        },
        {
          "command": "runway.openInSystemTerminal.Warp",
          "when": "view == runwayView && viewItem =~ /^runnable-/ && config.runway.systemTerminalApp == 'Warp'",
          "group": "1_run@2"
        },
        {
          "command": "runway.openInSystemTerminal.iTerm",
          "when": "view == runwayView && viewItem =~ /^runnable-/ && config.runway.systemTerminalApp == 'iTerm'",
          "group": "1_run@2"
        },
        {
          "command": "runway.openInSystemTerminal.iTerm2",
          "when": "view == runwayView && viewItem =~ /^runnable-/ && config.runway.systemTerminalApp == 'iTerm2'",
          "group": "1_run@2"
        },
        {
          "command": "runway.openSourceFile",
          "when": "view == runwayView && (viewItem =~ /^runnable-/ || viewItem == packageGroup)",
          "group": "1_run@3"
        },
        {
          "command": "runway.removeSource",
          "when": "view == runwayView && (viewItem == packageGroup || viewItem == makeGroup || viewItem == fileCategory)",
          "group": "9_remove"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.100.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.9.3"
  }
}
